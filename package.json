    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "^5.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "jest": "25.0.0",
    "jest-localstorage-mock": "^2.4.0",
    "jest-styled-components": "7.0.0",
    "parcel-bundler": "^1.12.4",
