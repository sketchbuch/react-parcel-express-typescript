{
  "name": "react-parcel-express-typescript",
  "version": "1.0.0",
  "description": "Boilerplate for a universal react app using babel, express, parcel, and typescript.",
  "homepage": "https://github.com/sketchbuch/react-parcel-express-typescript",
  "license": "MIT",
  "main": "./src/client/client.html",
  "private": true,
  "author": {
    "name": "sketchbuch",
    "url": "https://github.com/sketchbuch"
  },
  "bugs": {
    "url": "https://github.com/sketchbuch/react-parcel-express-typescript/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sketchbuch/react-parcel-express-typescript.git"
  },
  "scripts": {
    "build:client": "parcel build ./src/client/client.html --out-dir dist/client",
    "build:server": "parcel build ./src/server/server.ts -d dist/server --public-url /dist --target=node6",
    "build": "yarn build:client && yarn build:server",
    "clean": "rimraf ./dist/*",
    "dev:parcel": "yarn clean && parcel ./src/client/client.html --port 3000 --open",
    "dev": "yarn clean && yarn watch & (sleep 5 && yarn server)",
    "prod": "yarn clean && yarn build && yarn server",
    "server": "nodemon ./dist/server/server.js",
    "test:c": "jest --config=./config/jest/jest.js --coverage",
    "test": "jest --config=./config/jest/jest.js",
    "watch:client": "parcel watch ./src/client/client.html --out-dir dist/client",
    "watch:server": "parcel watch ./src/server/server.ts -d dist/server --public-url /dist --target=node6",
    "watch": "concurrently --kill-others \"yarn watch:client\" \"yarn watch:server\""
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3",
    "concurrently": "^5.1.0",
    "convict": "^5.2.0",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-imported-component": "^6.2.1",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.0",
    "react-router-redux": "^4.0.8",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.4.0",
    "@types/concurrently": "^5.1.0",
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^12.12.11",
    "@types/parcel-bundler": "^1.12.1",
    "@types/parcel-env": "^0.0.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@types/react-hot-loader": "^4.1.1",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-router-redux": "^5.0.18",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "^5.0.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "jest": "25.0.0",
    "jest-localstorage-mock": "^2.4.0",
    "jest-styled-components": "7.0.0",
    "nodemon": "^2.0.2",
    "parcel-bundler": "1.11.0",
    "react-hot-loader": "^4.12.19",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.5"
  }
}
